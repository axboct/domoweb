{
    "json_version" : 1,
    "identity" : {
        "type" : "dmw_widgetset",
        "id" : "highcharts",
        "version" : 1,
        "name" : "HighCharts Graphs",
        "description" : "Widgets for graphs using the HighCHarts library (http://www.highcharts.com)",
        "author" : "Ferllings, Domos",
        "author_email" : "cedric@domogik.org, domos.vesta@gmail.com"
    },
    "widgets": {
        "lineChart": {
            "dev" : true,
            "name" : "Line Chart",
            "description" : "Simple Line Chart",
            "height" : 4,
            "width" : 6,
            "default_style" : false,
            "options" : {
                "title" : {
                    "name": "Graph Title",
                    "type": "string",
                    "default": "Graph",
                    "required": true
                },
                "subtitle" : {
                    "name": "Sub Title",
                    "type": "string",
                    "default": "",
                    "required": false
                }
            },
            "sensors" : {
                "series" : {
                    "name": "Data",
                    "description": "Data series",
                    "types" : ["DT_Number"],
                    "group": true,
                    "groupmin": 1,
                    "groupmax": 5
                }
            }
        },
        "sensorNumberChart": {
            "name" : "Number highchart",
            "height" : 1,
            "width" : 1,
            "options" : {
                "hideLabels" : {
                    "name": "Hide the widget labels",
                    "description": "Hide the top and left widget labels",
                    "type": "boolean",
                    "default": true
                },
                "autoconvert" : {
                    "name": "Automatic conversion",
                    "description": "Automatically convert big value to K(x) / M(x) / G(x) / T(x)",
                    "type": "boolean",
                    "default": "False"
                },
                "color" : {
                    "name": "HighStock line graph color",
                    "description": "HighStock line graph color",
                    "type": "string",
                    "default": "#848484"
                },
                "theme" : {
                    "name": "HighStock Theme",
                    "description": "HighStock Theme (not used yet)",
                    "type": "string",
                    "default": "sunset"
                }
            },
            "sensors" : {
                "primary" : {
                    "name": "Sensor",
                    "description": "A number sensor",
                    "types" : ["DT_Number"],
                    "required": true
                }
            }
        }    
    }
}
